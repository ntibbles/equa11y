{
  "manifest_version": 3,
  "name": "Equa11y: Accessibility Testing Utilities",
  "version": "2.0",
  "description": "A utility extension for testing webpages for accessibility. Reveal code and perform accessibility tests quickly.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "debugger",
    "sidePanel"
  ],
  "action": {
    "default_popup": "screens/popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "screens/scripts/sidebar.js"
      ],
      "css": [
        "screens/css/sidebar.css"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "screens/sidebar.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "sw.js"
  }
}