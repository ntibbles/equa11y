{
  "name": "equa11y",
  "version": "1.4",
  "description": "A utility extension for testing webpages for accessibility.",
  "main": "popup.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "copyfiles scripts/* deps/* deps/*/* screens/* screens/*/* screens/*/*/* screens/scripts/utils/* icons/* manifest.json extension.css about.html popup.html popup.js popup.css sw.js dist",
    "test": "jest",
    "serve": "http-server -p 8080"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntibbles/Assistive-Technology-Testing-Tool.git"
  },
  "keywords": [
    "a11y",
    "chrome-extension"
  ],
  "author": "Noel Tibbles",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ntibbles/Assistive-Technology-Testing-Tool/issues"
  },
  "homepage": "https://github.com/ntibbles/Assistive-Technology-Testing-Tool#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "http-server": "^14.1.1",
    "jest": "^30.0.4",
    "jest-puppeteer": "^11.0.0",
    "puppeteer": "^24.14.0"
  }
}
